.row
  .col-md-6.col-md-offset-3
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .panel.panel-primary
        .panel-heading
          %h4 Sign up
        .panel-body.row
          .row
            .col-md-10.col-md-offset-1
              - if resource.errors.any?
                #attr_error_explanation.alert.alert-danger
                  = devise_error_messages!
          
          .col-md-8.col-md-offset-2
            .form-group
              = f.text_field :username, autofocus: true, class: "form-control", placeholder: "Username", required: true 
            
            .form-group
              = f.email_field :email, class: "form-control", placeholder: "Email", required: true 

            .form-group
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", required: true 

            .form-group
              = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Confiration", required: true 

        .panel-footer
          .row
            .col-md-3
              = f.submit "Sign up", class: 'btn btn-success', "data-dismiss": "modal", type: :submit
            .col-md-6.col-md-offset-3
              Already have an account ?
              = render "devise/shared/links"