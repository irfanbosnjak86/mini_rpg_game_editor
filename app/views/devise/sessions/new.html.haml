.row
  .col-md-6.col-md-offset-3
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .panel.panel-primary
        .panel-heading
          %h4 Sign up
        .panel-body.row
          .row
            .col-md-10.col-md-offset-1
              - if resource.errors.any?
                #attr_error_explanation.alert.alert-danger
                  = devise_error_messages!
          
          .col-md-8.col-md-offset-2
            .form-group
              = f.text_field :login, autofocus: true, class: "form-control", placeholder: "Username or Email", required: true 

            .form-group
              = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", required: true 
            - if devise_mapping.rememberable?
              .form-group
                %center
                  = f.check_box :remember_me
                  = f.label :remember_me

        .panel-footer
          %center
            = f.submit "Login", class: 'btn btn-success', "data-dismiss": "modal", type: :submit
            %br/
            %br/
            = render "devise/shared/links"