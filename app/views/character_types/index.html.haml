.container
  .row
    %br/
    = link_to "Create Character Type", new_character_type_path, class: "btn btn-primary pull-right"
  .row
    %h2 List of Character Types
    %table.table.table-bordered
      %thead
        %tr
          %th Name
          %th Option
      %tbody
        - @characters.each do |character|
          %tr
            %td= link_to character.name, character_type_path(character) 
            %td= link_to "Edit", edit_character_type_path(character), class: "btn btn-xs btn-warning"

  
